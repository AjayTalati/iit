function [BR FR] = comp_pers_single(current,past,future,x0_s,p,b_table,bf_option)

%  compute BRs and FRs for a single perspective but given some fixed
%  current state

N = size(p,2);

x0 = find(b_table{current,N} == 1);
xp = find(b_table{past,N} == 1);
xf = find(b_table{future,N} == 1);

x0 = M_pb{current}; % current subset
x0_out = pick_rest(1:N,x0); % complement
x0_si = x0_s(x0); % get the current state of the current subset

if (bf_option == 1 || bf_option == 3)
    xp = M_pb{past}; % past
    xp_out = pick_rest(1:N,xp);
    BR = partial_prob_cons(xp,[],xp_out,x0,x0_si,p,b_table,1); % all out except for xp
end

if (bf_option == 2 || bf_option == 3)
    xf = M_pb{future}; % future
    FR = partial_prob_cons(x0,[],x0_out,xf,x0_si,p,b_table,0); % all out except for x0
end

%a hackey way to control for only wanting the future rep returned
if (bf_option == 2)
    BR = FR;
end

    

end